<table id="results">
  <thead>
    <tr>
      <th>Место</th>
      <th>Команда</th>
      <th>Время финиша</th>
    </tr>
  </thead>
  <tbody>
    <% @game.finished_teams.each do |team| %>
      <tr>
        <td><%= @game.place_of(team) %></td>
        <td><%= team.name %></td>
        <% game_passing = GamePassing.of(team, @game) %>
        <td>
          <%= game_passing.finished_at.strftime('%H:%M:%S') %> <%= game_passing.finished_at.strftime('(%d.%m)') if game_passing.finished_at.day != @game.starts_at.day %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>