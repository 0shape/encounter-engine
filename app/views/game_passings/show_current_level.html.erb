<h2>
  Игра "<strong><%= @game.name %></strong>", Задание #<%= @game_passing.current_level.position %>
</h2>

<br />

<fieldset>
  <legend>
    <%= @game_passing.current_level.name %>
  </legend>

  <%= @game_passing.current_level.text %>
</fieldset>

<br />

<% @game_passing.hints_to_show.each_with_index do |hint, index| %>
  <fieldset>
    <legend>
      Подсказка #<%= index + 1 %>
    </legend>
    <%= hint.text %>
  </fieldset>

  <br />
<% end %>

<%#= "Ответ неверный" if @result.false? %>

<%= form :action => url(:pass_level), :method => :post do %>
  <p><%= text_field :name => 'answer', :label => "Ответ" %></p>
  <%= submit "Отправить!" %>
<% end =%>