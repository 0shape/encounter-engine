<p>
  Полный лог ответов
</p>

<br />

<table id="stats" border="1">
  <tbody>
    <% @levels.each do |level| %>
      <tr align="center">
        <td colspan="0">
          <%= level.name %><br />
          Верный код:<%= level.questions.first.answer %>
        </td>
      </tr>
      <tr valign="top">
        <% @teams.each do |team| %>
        <td>
          <%= team.name %><br />
          <% team_logs = @logs.find_all { |log| log.team == team.name and log.level == level.name } %>
          <% team_logs.each do |team_log| %>
            <%= team_log.time.strftime("%H:%M:%S") %>&nbsp;<%= team_log.answer %><br />
          <% end %>
        </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
