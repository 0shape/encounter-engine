<%= error_messages_for @user %>

<%= form_for @user, :action => url(:users) do %>
  <%= text_field :email, :label => "E-mail" %> <br />
  <%= text_field :password, :label => "Пароль" %> <br />
  <%= text_field :password_confirmation, :label => "Подтверждение" %> <br />
  <%= submit "Зарегистрироваться" %>
<% end =%>