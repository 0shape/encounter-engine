<h3>Login</h3>

<div>

  <%= "Неправильный адрес или пароль" unless session.authentication.errors.empty? %>
  <% @login_param = Merb::Authentication::Strategies::Basic::Base.login_param %>
  <% @password_param = Merb::Authentication::Strategies::Basic::Base.password_param %>
  
	<form action="<%= slice_url(:merb_auth_slice_password, :perform_login) %>" method="POST" accept-charset="utf-8">
	  <input type="hidden" name="_method" value="PUT" />
	  <div class="formRow">
	    <label>Email: <input type="text" name="<%= @login_param.to_s %>" value="" id="<%= @login_param.to_s %>"></label>
	  </div> <!-- close: formRow -->
	  <div class="formRow">
	    <label>Пароль:<input type="password" name="<%= @password_param.to_s %>" value="" id="<%= @password_param.to_s %>"></label>
	  </div> <!-- close: formRow -->
	  <div class="formRow">
	    <input type="submit" name="Submit" value="Войти" id="Submit">
	  </div> <!-- close: formRow -->
	</form>
</div>

    
  
